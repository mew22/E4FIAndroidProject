<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/detail_instrument_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/default5"
        android:minWidth="100dp"
        android:minHeight="100dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_instrument_type"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/detail_instrument_logo"
        android:layout_toEndOf="@+id/detail_instrument_logo"
        android:hint="Instrument"
        android:inputType="textPersonName"
        android:textColor="@color/white" />

</RelativeLayout>