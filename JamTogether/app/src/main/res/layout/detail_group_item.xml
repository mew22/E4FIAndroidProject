<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/detail_group_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/default0"
        android:minWidth="100dp"
        android:minHeight="100dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_group_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/detail_group_logo"
        android:layout_toEndOf="@+id/detail_group_logo"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_group_created"
        android:layout_below="@+id/detail_group_name"
        android:layout_toRightOf="@+id/detail_group_logo"
        android:layout_toEndOf="@+id/detail_group_logo"
        android:layout_gravity="center_horizontal"
        android:hint="date created"
        android:inputType="datetime"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_group_ended"
        android:layout_below="@+id/detail_group_created"
        android:layout_toRightOf="@+id/detail_group_logo"
        android:layout_toEndOf="@+id/detail_group_logo"
        android:layout_gravity="center_horizontal"
        android:hint="date ended"
        android:inputType="datetime"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_group_admin"
        android:layout_below="@+id/detail_group_ended"
        android:layout_toRightOf="@+id/detail_group_logo"
        android:layout_toEndOf="@+id/detail_group_logo"
        android:layout_gravity="center_horizontal"
        android:hint="admin"
        android:textColor="@color/white" />

    <ListView
        android:layout_below="@+id/detail_group_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_group_members"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white" />


</RelativeLayout>